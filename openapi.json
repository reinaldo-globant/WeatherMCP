{
  "openapi": "3.0.1",
  "info": {
    "title": "WeatherMCP API",
    "version": "v1",
    "description": "API para acceso a datos meteorológicos de MeteoChile. Disponible como servidor MCP y como API REST.",
    "contact": {
      "name": "WeatherMCP",
      "url": "https://github.com/example/weathermcp"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5175",
      "description": "Servidor de desarrollo"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "tags": ["Sistema"],
        "summary": "Verificación de salud del servidor",
        "description": "Endpoint para verificar que el servidor esté funcionando correctamente",
        "responses": {
          "200": {
            "description": "Servidor funcionando correctamente",
            "content": {
              "application/json": {
                "example": {
                  "status": "healthy",
                  "timestamp": "2024-01-15T10:30:00Z"
                }
              }
            }
          }
        }
      }
    },
    "/api/weather/stations": {
      "get": {
        "tags": ["Datos Meteorológicos"],
        "summary": "Obtiene el catastro de estaciones meteorológicas",
        "description": "Retorna una lista completa de todas las estaciones meteorológicas disponibles en la red de MeteoChile",
        "responses": {
          "200": {
            "description": "Lista de estaciones obtenida exitosamente",
            "content": {
              "application/json": {
                "example": [
                  {
                    "code": "330001",
                    "name": "ARICA",
                    "latitude": -18.4746,
                    "longitude": -70.3127,
                    "altitude": 58
                  }
                ]
              }
            }
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    }
  }
}